<!doctype html>
<!--[if lt IE 9 ]> <html lang="en-GB" class="no-js lt-ie9"> <![endif]-->
<!--[if IE 9 ]> <html lang="en-GB" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en-GB" class="no-js"> <!--<![endif]-->
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="initial-scale=1">

		<title>{% block title %}Sassaparilla: Fiennes Edition{% endblock %}</title>
		{{ "screen.css" | asset_url | stylesheet_tag }}
		{% block styles %}{% endblock %}
		<link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
		<!-- TODO: Download a custom build of modernizer to suit the project -->
		<script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js"></script>
		<script src="https://use.typekit.net/ocf0syy.js"></script>
		<script>try{Typekit.load({ async: true });}catch(e){}</script>
	</head>

	<body>
		{% block header %}
		<header class="main-nav-container main-nav-container--secondary">
			<nav class="main-nav">
				<a href="/" class="main-nav__logo">
					Cai Davies
				</a>
				<a href="mailto:hello@caidavies.me" title="Contact me" class="main-nav__contact-me">
					Contact me
				</a>
			</nav>
		</header>
		{% endblock %}

			{% block content %}{% endblock %}

		{% block footer %}
			<footer class="main-footer">
				<section id="baseline">
				  <div class="section typeset section--full-width">
				    <div class="single">
					    <div class="main-container">
								<ul class="main-footer-items">
									<h3 class="heading--bordered">Contact me</h3>
									<li class="main-footer-items__item main-footer-items__item--dribbble">
										<h5>Dribbble</h5>
										<p class="main-footer-items__paragraph">
											<a href="https://dribbble/caidavies" title="View my work on Dribbble">View my work on Dribbble <span class="arrow">→</span></a>
										</p>
									</li>
									<li class="main-footer-items__item main-footer-items__item--twitter">
										<h5>Twitter</h5>
										<p class="main-footer-items__paragraph">
											<a href="https://twitter.com/_caidavies" title="See what i’m tweeting">See what i’m tweeting <span class="arrow">→</span></a>
										</p>
									</li>
									<li class="main-footer-items__item main-footer-items__item--email">
										<h5>Email</h5>
										<p class="main-footer-items__paragraph">
											<a href="mailto:hello@caidavies.me" title="Contact me via email">Contact me via email <span class="arrow">→</span></a>
										</p>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</section>
			</footer>
		{% endblock %}

		<!-- TODO: Select version of jquery and link to CDN -->
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		{{ "script.js" | asset_url | script_tag }}

	</body>

</html>
